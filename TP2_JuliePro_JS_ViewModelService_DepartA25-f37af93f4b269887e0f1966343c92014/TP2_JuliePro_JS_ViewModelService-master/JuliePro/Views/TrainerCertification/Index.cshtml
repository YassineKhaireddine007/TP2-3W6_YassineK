<script>
    
     // Méthode pour surligner les lignes selon le nom

     function highlightByName() 
    {
         let recherche = document.getElementById("searchInput").value.toLowerCase();
         let lignes = document.getElementsByTagName("tr");

        for (let tr of lignes) 
        {

        let cellules = tr.getElementsByTagName("td")[0] ;

         if (cellules)
         {
             let celluleNom = cellules.innerText.toLowerCase() ;
            if (celluleNom.includes(recherche) & recherche !== "") 
            {
                tr.style.backgroundColor = "yellow";
            } else 
            {
                tr.style.backgroundColor = "";
            }
         }


         }
    }
   




@model IEnumerable<JuliePro.Models.TrainerCertification>

<script>
    
     // Méthode pour surligner les lignes selon le nom
     function highlightByName() {
    let recherche = document.getElementById("searchInput").value.toLowerCase();
    let lignes = document.getElementsByTagName("tr");

    for (let ligne of lignes) {
        let cellules = ligne.getElementsByTagName("td");
        let trouve = false;

        for (let i = 0; i < cellules.length; i++) {
            let texte = cellules[i].innerText.toLowerCase();
            if (texte.includes(recherche) && recherche !== "") {
                trouve = true;

            }
        }

        if (trouve) {
            ligne.style.backgroundColor = "yellow";
        } else {
            ligne.style.backgroundColor = "";
        }
    }
}


     // TODO: Ajouter la méthode filterByDate()
</script>


@{
    ViewData["Title"] = @Locals["Index"];
}

<h1>@Locals["Index"]</h1>

<p>
    <a asp-action="Create">@Locals["Create New"]</a>
</p>

<h4>@Locals["HighlightByName"]</h4>
<input id="searchInput"  type="text" oninput="highlightByName()" />

<h4>@Locals["FilterByDate"]</h4>
<input type="date" />
<button onclick="filterByDate()" class="btn btn-primary">@Locals["Filter"]</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCertification)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-action="Filter" asp-controller="Trainer" asp-route-SearchNameText="@item.Trainer.FullName" >
                    @Html.DisplayFor(modelItem => item.Trainer.FullName)
